<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI name="InGameMenuUALSettingsFrame">
    <GuiElement profile="fs25_menuContainer">
        <!-- Static page header -->
        <GuiElement profile="fs25_menuHeaderPanel">
			<Bitmap profile="fs25_menuHeaderIconBg">
				<Bitmap profile="fs25_menuHeaderIcon" imageSliceId="gui.icon_options_generalSettings2"/>
			</Bitmap>
			<Text profile="fs25_menuHeaderTitle" id="categoryHeaderText" text="$l10n_ui_inGameMenuModeSettings"/>
		</GuiElement>
		
		<ThreePartBitmap profile="fs25_lineSeparatorTopHighlighted" position="0px 0px"/>
		
		<GuiElement profile="fs25_subCategorySelectorTabbedContainer" id="settingsFrame">
			<ScrollingLayout profile="fs25_settingsLayout" id="ualGeneralSettingsLayout">
				<Bitmap profile="fs25_multiTextOptionContainer">
					<BinaryOption profile="fs25_settingsBinaryOption" onClick="onClickBinaryOption" id="checkAutoHelp">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" text="$l10n_toolTip_autoHelp"/>
					</BinaryOption>
					<Text profile="fs25_settingsMultiTextOptionTitle" text="$l10n_setting_helpWindow"/>
				</Bitmap>
			</ScrollingLayout>
		</GuiElement>
		
    </GuiElement>
</GUI>
